<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tipclik4.MainActivity">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/printFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Печать файла" />

        <Button
            android:id="@+id/printDesignButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Печать дизайна" />

        <Button
            android:id="@+id/myOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мои заказы" />

        <Button
            android:id="@+id/viewOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Просмотр заказов" />
    </LinearLayout>

</RelativeLayout>